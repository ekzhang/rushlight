{
  "name": "rushlight",
  "version": "0.0.2",
  "license": "MIT",
  "description": "Collaborative text editing client for CodeMirror 6",
  "keywords": [
    "codemirror",
    "editor",
    "collaboration"
  ],
  "author": "Eric Zhang <ekzhang1@gmail.com> (https://www.ekzhang.com)",
  "funding": "https://github.com/sponsors/ekzhang",
  "repository": {
    "type": "git",
    "url": "https://github.com/ekzhang/rushlight.git"
  },
  "sideEffects": false,
  "files": [
    "README.md",
    "dist"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "lint": "tsc",
    "build": "tsup index.ts --format cjs,esm --dts",
    "dev": "npm run build -- --watch"
  },
  "dependencies": {
    "@codemirror/collab": "^6.0.0",
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.13.2"
  },
  "devDependencies": {
    "tsup": "^7.1.0",
    "typescript": "~5.1.3"
  }
}
